<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.Offline_Learning.AdvertiseFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:gravity="top">

        <Button
            android:id="@+id/end_advertise"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/disconnect"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/back"/>

        <Button
            android:id="@+id/btnForward"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/forward"/>

        <Button
            android:id="@+id/btn_help_adv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="help" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:visibility="invisible"
            android:text="@string/send"/>


    </LinearLayout>

    <WebView
        android:id="@+id/webkit"
        android:layout_width="match_parent"
        android:layout_height="420dp" />

    <TextView
        android:id="@+id/helpMessageAdv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="HELP: Send button will appear when a connection has been made."/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ad_output"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>